{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@config/*": [
                "./config/*"
            ],
            "@models/*": [
                "./models/*"
            ],
            "@controllers/*": [
                "./controllers/*"
            ],
            "@routes/*": [
                "./routes/*"
            ],
            "@middleware/*": [
                "./middleware/*"
            ],
            "@utils/*": [
                "./utils/*"
            ],
            "@lib/*": [
                "./lib/*"
            ]
        },
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}